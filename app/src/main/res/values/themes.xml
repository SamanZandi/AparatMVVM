<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AparatVersion2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/pink</item>
    </style>

    <style name="Theme.AparatVersion2" parent="Base.Theme.AparatVersion2" />


    <!--Title Text View-->
   <style name="TitleTextView" parent="Widget.AppCompat.TextView" tools:ignore="ResourceCycle">
       <item name="android:textColor">@color/pink</item>
       <item name="android:fontFamily">@font/fontfarsimed</item>
       <item name="android:textSize">@dimen/_16sp</item>
       <item name="android:layout_marginTop">@dimen/_15dp</item>
       <item name="android:layout_marginStart">@dimen/_3dp</item>
   </style>


    <!-- Text style for selected state -->
    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- Text style for unselected state -->
    <style name="BottomNavTextStyleHidden" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">0sp</item>
        <item name="android:visibility">gone</item>
    </style>


    <!--TextInputLayout-->
    <style name="CustomFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/pink</item>
        <item name="boxStrokeColor">@color/pink</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="startIconTint">@color/pink</item>
    </style>

</resources>